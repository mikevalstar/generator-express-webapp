doctype 5
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width')
        title= title
        block css
            link(rel='stylesheet', href='/less/admin.css')
        block js
    body
        .container
            .row
                .col-xs-6.col-xs-offset-3
                    h1 Login
                    form(method="post", role="form")
                        .form-group
                            label(for="admin-login") Login
                            input#admin-login.form-control(type="text", placeholder="Login", name="username")
                        .form-group
                            label(for="admin-password") Password
                            input#admin-password.form-control(type="password", placeholder="Password", name="password")
                        input.btn.btn-primary(type="submit", value="Login")