extends layout

block content
    .utilityblock.pull-right
        a.btn.btn-primary(href="/admin/<%= routename %>/new") New <%= routename %>

    h1 <%= routename %> List
        
    table.table
        thead
            tr
                each v, k in model.rawAttributes
                    th= k
        tbody
            each row in results.rows
                tr
                    each v, k in model.rawAttributes
                        if(k == 'id')
                            td
                                a(href="/admin/<%= routename %>/"+row[k])= row[k]
                        else
                            td= row[k]
    
    div(style="text-align: center;")
        | Row count: 
        span= results.count